params {

  mirbase {
    remote = "http://micro.smith.man.ac.uk/~sam/download/mirbase22rnacentral.20180523.json"
  }

  lncipedia {
    remote = "https://www.dropbox.com/s/4fkoseinlbca359/lncipedia_5_0_rnacentral.json.gz?dl=0"
  }

  ensembl {
    remote = 'ftp://ftp.ensembl.org/pub/current_embl/'
  }

  rfam {
    mysql {
      host = 'mysql-rfam-public.ebi.ac.uk'
      port = 4497
      user = 'rfamro'
      db_name = 'Rfam'
    }
  }

  import_data {
    chunk_size = 1024 * 1000 * 1000
  }

  genome_mapping {
    min_length = 20
    max_length = 100000
    num_seq = 10
    blat_options {
      step_size = 5
      rep_match = 2253
      min_score 0
      min_identity = 95
    }
  }

  search_export {
    chunk_size = 2237839
    schema = 'http://www.ebi.ac.uk/ebisearch/XML4dbDumps.xsd'
    publish = "${baseDir}/search-export"
  }

  qa {
    rfam_scan {
      clans = '/hps/nobackup/production/xfam/rfam/CMs/Rfam12_2.clanin'
      cm_files = '/hps/nobackup/production/xfam/rfam/RELEASES/13.0.2/cms/Rfam.cm*'
      cpus = 5
      cm_memory = 20000
      chunk_size = 3000
    }
  }
}

env {
  PERL5LIB = "/nfs/production/xfam/rfam/rfam_rh7/production_software/rfam_production/Bio-Easel/blib/lib:/nfs/production/xfam/rfam/rfam_rh7/production_software/rfam_production/Bio-Easel/blib/arch:/nfs/production/xfam/rfam/rfam_rh7/production_software/perl5/lib/perl5/x86_64-linux-thread-multi:/nfs/production/xfam/rfam/rfam_rh7/production_software/perl5/lib/perl5:/nfs/production/xfam/rfam/rfam_rh7/production_software/rfam_production/rfam-family-pipeline/Rfam/Lib:/nfs/production/xfam/rfam/rfam_rh7/production_software/rfam_production/rfam-family-pipeline/Rfam/Schemata:/nfs/production/xfam/rfam/rfam_rh7/production_software/rfam_production/rfam-family-pipeline/PfamLib:/nfs/production/xfam/pfam/rh7/perl5/lib/perl5:/nfs/production/xfam/rfam/rfam_rh7/production_software/rfam_production/rfam-family-pipeline/PfamSchemata"
}

includeConfig "local.config"

