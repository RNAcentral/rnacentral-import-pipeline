params {
  genome_mapping {
    run = true
    min_length = 20
    max_length = 100000
    chunk_size = 2000

    fetch_unmapped_sequences {
      directives.maxForks = 5
    }

    download_genome {
      directives.memory = 30.GB
      chunk_size = '2e9'
    }

    select_mapped {
      directives.memory = 15.GB
    }

    blat {
      options {
        step_size = 5
        rep_match = 2253
        min_score = 0
        min_identity = 95
      }
      directives.memory = 10.GB
    }

    species_excluded_from_mapping = [
      'anas_platyrhynchos',  // Cannot find genome
      'brassica_rapa',      // Cannot find genome
      'aegilops_tauschii',  // Cannot find genome
    ]

  }
}
