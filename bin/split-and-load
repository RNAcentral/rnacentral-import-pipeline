#!/usr/bin/env bash

set -euo pipefail
IFS=$'\n\t'

ctl="$1"
input_name="$2"
size="$3"
split_name="${4:-data}"

[ ! -d merged ] || rm -r merged
mkdir merged
find . -name "$input_name" |
xargs cat |
split --additional-suffix=.csv -dC $size - "merged/$split_name"

cp $ctl merged/$ctl
cd merged
pgloader --on-error-stop $ctl
